@model IEnumerable<Web.ViewModels.AnuncioViewModel>

@{
    ViewData["Title"] = "ListarPorCategoria";
}

<h2>Listar Por Categoria</h2>

<div class="row">
    @{
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4" style="display: flex;justify-content: center">
                    <div style="margin: auto">
                        <a asp-action="Details" asp-route-id="@item.Id">
                            @if (item.Imagens.Count() > 0)
                            {

                                <img src="@item.Imagens.ElementAt(0).Caminho" alt="@item.Titulo" class="img-thumbnail img-fluid" style="max-width:175px" />

                            }
                            else
                            {
                                <img src="~/images/default.jpg" />
                            }
                        </a>

                        <h5>@item.Titulo</h5>
                        <h5>R$ @item.Preco</h5>
                    </div>
                </div>
            }
        </div>
        <br />
    }
</div>