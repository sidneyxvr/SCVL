@model Web.ViewModels.VendaViewModel

@{
    ViewData["Title"] = "Atualizar Status";
}

<h2>Atualizar Status</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AtualizarStatus">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Horario" class="control-label"></label>
                <input asp-for="Horario" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="@new @SelectList(ViewBag.Status, "Key", "Value")" class="form-control"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormaPagamento" class="control-label"></label>
                <input value="@ViewBag.FormaPagamento[Model.FormaPagamento]" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Avaliacao" class="control-label"></label>
                <input asp-for="Avaliacao" id="input-id" type="text" data-step="1.0" class="rating" data-size="xs" data-show-caption="false" disabled>
            </div>
            <div class="form-group">
                <label asp-for="Anuncio.Titulo" class="control-label"></label>
                <input asp-for="Anuncio.Titulo" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $("#input-id").rating();
    </script>
}
