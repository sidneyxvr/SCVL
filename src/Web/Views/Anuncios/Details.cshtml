@model Web.ViewModels.AnuncioViewModel

@{
    ViewData["Title"] = "Detalhes";
}

<h2>Detalhes</h2>

<div>
    <hr />
    <div class="row">
        <div class="col-md-6 text-justify">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Titulo)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Titulo)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Autores)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Autores)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Editora)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Editora)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Categoria)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Categoria)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Preco)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Preco)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.QuantidadeDisponivel)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.QuantidadeDisponivel)
                </dd>
            </dl>
        </div>
    </div>
    <div class="row">
        <h3>Imagens</h3><br />
        @{
            <div class="col-md-4">
                @for (int i = 0; i < Model.Imagens.Count(); i++)
                {
                <div class="col-sm-4">
                    <img src="@Model.Imagens.ElementAt(i).Caminho" alt="@Model.Titulo" class="img-thumbnail img-fluid" style="max-width:100px" />
                </div>
                }
            </div>
            }
    </div>
</div>
<br/>
<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Voltar para a lista</a>
</div>

